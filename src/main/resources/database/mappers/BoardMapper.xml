<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.boot3.board.BoardMapper">

	<select id="getList" parameterType="Pager" resultType="BoardVO">
		SELECT * FROM BOARD WHERE TITLE LIKE CONCAT('%',#{search},'%') ORDER BY NUM DESC LIMIT #{startRow},#{perPage}
	</select>
	<select id="getDetail" parameterType="BoardVO" resultType="BoardVO">
		SELECT * FROM BOARD WHERE NUM=#{num}
	</select>
	<insert id="setAdd" parameterType="BoardVO">
		INSERT INTO BOARD VALUES (null,#{title},#{writer},#{contents},0,now(),0,0,0,#{category})
	</insert>
	<update id="setUpdate" parameterType="BoardVO">
		UPDATE BOARD SET TITLE=#{title}, CONTENTS=#{contents} WHERE NUM=#{num}
	</update>
	<delete id="setDelete" parameterType="BoardVO">
		DELETE FROM BOARD WHERE NUM=#{num}
	</delete>

	<select id="getFileList" resultType="BoardFilesVO">
		SELECT * FROM BOARDFILES
	</select>

	<select id="getFileDetail" resultType="BoardFilesVO" parameterType="BoardVO">
		SELECT * FROM BOARDFILES BF INNER JOIN BOARD B WHERE B.NUM=#{num}
	</select>

	<insert id="setFileAdd" parameterType="BoardFilesVO">
		INSERT INTO BOARDFILES (FILENUM,NUM,FILENAME,ORINAME) VALUES (null,#{num},#{fileName},#{oriName})
	</insert>
	<delete id="setFileDelete" parameterType="BoardFilesVO">
		DELETE FROM BOARDFILES WHERE FILENUM=#{fileNum}
	</delete>



</mapper>